@page
@model BookwormsOnline.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<section class="auth-shell">
    <div class="auth-card">
        <div class="auth-card__header">
            <p class="eyebrow">Secure Access</p>
            <h1>Sign in</h1>
            <p>You may be asked to enter a one-time code sent to your email after password verification.</p>
        </div>

        <form method="post"
              data-enhanced-form
              data-recaptcha-action="login"
              data-recaptcha-site-key="@Model.RecaptchaSiteKey">
            <div asp-validation-summary="All" class="alert alert-danger alert-modern validation-summary mb-3" role="alert"></div>
            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" data-password-field />
                    <button type="button" class="btn password-toggle" data-password-toggle data-target="Input_Password">
                        <i class="bi bi-eye" aria-hidden="true"></i>
                    </button>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label"></label>
            </div>

            <input asp-for="Input.RecaptchaToken" type="hidden" id="recaptchaToken" data-recaptcha-token="true" />
            <button type="submit" class="btn btn-primary w-100 mt-3" data-loading-text="Signing in...">Sign in</button>

            <div class="quick-links mt-3">
                <a asp-page="/Account/ForgotPassword">Forgot password?</a>
                <a asp-page="/Account/Register">Create account</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://www.google.com/recaptcha/api.js?render=@Model.RecaptchaSiteKey"></script>
}
