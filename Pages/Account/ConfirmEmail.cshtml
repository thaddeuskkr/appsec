@page
@model BookwormsOnline.Pages.Account.ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<section class="auth-shell">
    <div class="auth-card">
        <div class="auth-card__header">
            <p class="eyebrow">Email Verification</p>
            <h1>Confirm email</h1>
            <p>Verify your account email before signing in.</p>
        </div>

        @if (Model.IsSuccess)
        {
            <div class="alert alert-success alert-modern mb-3" role="status">
                <i class="bi bi-check-circle-fill me-2" aria-hidden="true"></i>
                @Model.Message
            </div>
        }
        else
        {
            <div class="alert alert-danger alert-modern mb-3" role="alert">
                <i class="bi bi-exclamation-octagon-fill me-2" aria-hidden="true"></i>
                @Model.Message
            </div>
        }

        <div class="d-flex flex-wrap gap-2">
            <a asp-page="/Account/Login" class="btn btn-primary">Go to login</a>
            @if (!Model.IsSuccess)
            {
                <a asp-page="/Account/ResendConfirmation" asp-route-email="@Model.Email" class="btn btn-outline-primary">Resend confirmation email</a>
            }
        </div>
    </div>
</section>
