@page
@model BookwormsOnline.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
}

<section class="auth-shell">
    <div class="auth-card">
        <div class="auth-card__header">
            <p class="eyebrow">Credential Security</p>
            <h1>Change password</h1>
            <p>Minimum password age: @Model.PasswordMinAgeMinutes minute(s).</p>
        </div>

        @if (Model.IsPasswordExpired)
        {
            <div class="alert alert-warning">Your password has expired. Please set a new password now.</div>
        }

        <form method="post" data-enhanced-form>
            <div asp-validation-summary="All" class="alert alert-danger alert-modern validation-summary mb-3" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Input.CurrentPassword" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="Input.CurrentPassword" class="form-control" autocomplete="current-password" data-password-field />
                    <button type="button" class="btn password-toggle" data-password-toggle data-target="Input_CurrentPassword">
                        <i class="bi bi-eye" aria-hidden="true"></i>
                    </button>
                </div>
                <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" data-password-field />
                    <button type="button" class="btn password-toggle" data-password-toggle data-target="Input_NewPassword">
                        <i class="bi bi-eye" aria-hidden="true"></i>
                    </button>
                </div>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" data-password-field />
                    <button type="button" class="btn password-toggle" data-password-toggle data-target="Input_ConfirmPassword">
                        <i class="bi bi-eye" aria-hidden="true"></i>
                    </button>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary" data-loading-text="Updating...">Update password</button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
