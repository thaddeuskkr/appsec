@page
@model BookwormsOnline.Pages.Account.Verify2faModel
@{
    ViewData["Title"] = "Two-factor verification";
}

<section class="auth-shell">
    <div class="auth-card">
        <div class="auth-card__header">
            <p class="eyebrow">Step 2 of 2</p>
            <h1>Verify your login code</h1>
            <p>Enter the one-time verification code sent to your email address.</p>
        </div>

        <form method="post" data-enhanced-form>
            <div asp-validation-summary="All" class="alert alert-danger alert-modern validation-summary mb-3" role="alert"></div>
            <input asp-for="ReturnUrl" type="hidden" />
            <input asp-for="RememberMe" type="hidden" />

            <div class="mb-3">
                <label asp-for="Input.Code" class="form-label"></label>
                <input asp-for="Input.Code" class="form-control" autocomplete="one-time-code" inputmode="numeric" />
                <span asp-validation-for="Input.Code" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary" data-loading-text="Verifying...">Verify</button>
            <a asp-page="/Account/Login" class="btn btn-outline-primary ms-2">Back to login</a>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
