{
  "ConnectionStrings": {
    "DefaultConnection": "Server=127.0.0.1;Port=3306;Database=bookworms_online;User=bookworms_user;Password=CHANGE_ME;TreatTinyAsBoolean=false"
  },
  "SecurityPolicy": {
    "PasswordMinLength": 12,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "RequireDigit": true,
    "RequireSpecial": true,
    "PasswordHistoryCount": 2,
    "PasswordMinAgeMinutes": 5,
    "PasswordMaxAgeDays": 90,
    "LockoutMaxFailedAttempts": 3,
    "LockoutMinutes": 15,
    "SessionIdleTimeoutMinutes": 15,
    "SingleActiveSession": true,
    "AutoUnlockMinutes": 15,
    "EnableHttpsRedirectionInDevelopment": false
  },
  "Recaptcha": {
    "SiteKey": "YOUR_RECAPTCHA_SITE_KEY",
    "SecretKey": "YOUR_RECAPTCHA_SECRET_KEY",
    "MinScore": 0.5,
    "VerifyEndpoint": "https://www.google.com/recaptcha/api/siteverify"
  },
  "Smtp": {
    "Host": "smtp.example.com",
    "Port": 587,
    "Username": "smtp-user@example.com",
    "Password": "CHANGE_ME",
    "FromAddress": "no-reply@bookwormsonline.local",
    "UseSsl": true
  },
  "AppUrl": {
    "PublicBaseUrl": "https://localhost:5075"
  },
  "Storage": {
    "ProfilePhotoRoot": "App_Data/ProfilePhotos",
    "MaxPhotoBytes": 2097152,
    "DataProtectionKeysPath": "App_Data/DataProtectionKeys"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
